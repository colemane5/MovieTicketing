<UserControl x:Class="MovieTicketingAdmin.Views.TopGenresPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MovieTicketingAdmin.Views" xmlns:viewmodels="clr-namespace:MovieTicketingAdmin.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:TopGenresPanelViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="432" d:DesignWidth="640">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Text="Top Genres" Grid.Row="0" FontSize="30" />
        <DataGrid ItemsSource="{Binding TopGenres}" Grid.Row="1"
                  AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Rank" Binding="{Binding Rank}" Width="*" />
                <DataGridTextColumn Header="Genre Name" Binding="{Binding GenreName}" Width="5*" />
                <DataGridTextColumn Header="Tickets Sold" Binding="{Binding TicketsSold}" Width="2*" />
            </DataGrid.Columns>
        </DataGrid>
        <!-- From To -->
    </Grid>
</UserControl>
