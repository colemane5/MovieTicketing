<Window x:Class="MovieTicketingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieTicketingApp"
        xmlns:adminvms="clr-namespace:MovieTicketingAdmin.ViewModels;assembly=MovieTicketingAdmin"
        xmlns:adminviews="clr-namespace:MovieTicketingAdmin.Views;assembly=MovieTicketingAdmin"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920">
    <Grid>
        <Grid.Resources>
            <DataTemplate DataType="{x:Type adminvms:AdminHomeViewModel}">
                <adminviews:AdminHomeView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type adminvms:AdminStatsViewModel}">
                <adminviews:AdminStatsView />
            </DataTemplate>
        </Grid.Resources>
        <ContentControl Content="{Binding CurrentViewModel}"/>
    </Grid>
</Window>
